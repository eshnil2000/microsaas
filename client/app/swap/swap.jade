.internal--page__wrapper
  .container.swap-form__wrapper
    .row
      .col-md-10.col-md-offset-1.swap-form
        h1.text-center New microSaaS Contract
        form.form-horizontal.swap-form
          #pizza-time
            .col-md-12
              .panel.panel-default
                .panel-heading Options
                .panel-body
                  .checkbox
                    label
                      input(type='checkbox', ng-model="pizzaContract.topping", ng-true-value="'10k API calls/s'")
                      |  10k API calls/s   
                  .checkbox
                    label
                      input(type='checkbox', ng-model="pizzaContract.topping", ng-true-value="'20MB/s Bandwidth'")
                      |  1k users/s
                  .checkbox
                    label
                      input(type='checkbox', ng-model="pizzaContract.topping", ng-true-value="'20MB/s Bandwidth '")
                      |  20MB/s Bandwidth 
                  .checkbox
                    label
                      input(type='checkbox', ng-model="pizzaContract.topping", ng-true-value="'API Throttling'")
                      |  API Throttling
                .panel-heading Price
                .panel-body
                  .input-group
                      span.input-group-addon
                        span.glyphicon.glyphicon-usd
                      input.form-control(type='text', ng-model="pizzaContract.price")
                      
  
    .row
      .col-md-6.col-md-offset-3
        .btn.btn-primary.btn-block(ng-click="submit()") Submit 

.modal.fade#mining-transaction
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title  Mining transaction...
      .modal-body
